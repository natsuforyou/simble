<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation=
               "http://www.springframework.org/schema/beans     http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                http://www.springframework.org/schema/context	http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:component-scan base-package="com.rick.qian.test.service"/>

    <bean id="placeholderConfigurer" class="com.rick.qian.framework.config.CustomPropertyPlaceholderConfigurer">
        <property name="propertiesFiles">
            <list>
                <value>G:properties/zkService.properties</value>
                <value>G:properties/mysql-jdbc.properties</value>
                <value>P:properties/mysql-jdbc.properties</value>
            </list>
        </property>
    </bean>

</beans>